<% provide(:title, 'Edit Company Profile') %>
<% provide(:description, 'dynamic') %>
<% provide(:role, 'company') %>

<div class="sub-title">
  <div id="sub-title-bigtext">
    <h1>Update company profile</h1>
  </div>
  <div>
    <a href="edit_company_profile">edit</a>
  </div>
</div>
<div class="edit_company_profile_content">
  <%= form_for(@company) do |f| %>
  <div class="edit_company_profile_component">  
    <%= f.label :name, :class=>"edit_label_company_profile" %>
    <div class="edit_symbol_company_profile">:</div>
    <div id= "edit_company_profile_name">
        <%= f.text_field :name, :id=>"edit_company_profile_textfield" %>  
      </div>
  </div>
  <div class="edit_company_profile_component">
    <%= f.label :address, :class=>"edit_label_company_profile" %>
    <div class="edit_symbol_company_profile">:</div>
    <div id= "edit_company_profile_address">
      <%= f.text_field :address, :id=>"edit_company_profile_textfield" %> 
    </div>
  </div>

  <div class="edit_company_profile_component">
    <%= f.label :contact, :class=>"edit_label_company_profile" %>
    <div class="edit_symbol_company_profile">:</div>
    <div id= "edit_company_profile_contact">
      <%= f.text_field :contact, :id=>"edit_company_profile_textfield" %> 
    </div>
  </div>

  <div class="edit_company_profile_component">
    <%= f.label :password, :class=>"edit_label_company_profile" %>
    <div class="edit_symbol_company_profile">:</div>
    <div id= "edit_company_profile_password">
      <%= f.text_field :password, :id=>"edit_company_profile_textfield" %> 
    </div>
  </div>

  <div class="edit_company_profile_component">
    <%= f.label :password_confirmation, :class=>"edit_label_company_profile" %>
    <div class="edit_symbol_company_profile">:</div>
    <div id= "edit_company_profile_password_confirmation">
      <%= f.text_field :password_confirmation, :id=>"edit_company_profile_textfield" %>  
    </div>
  </div>

  <div class="edit_company_profile_component">
    <div class="edit_label_company_profile">Bill</div>
    <div class="edit_symbol_company_profile">:</div>
    <div id= "edit_company_profile_bill">Rp xxxx</div>
  </div>

   <%= f.submit "Save", class: "orange_button", id: "edit_company_profile_save" %>
  <% end %>
</div>