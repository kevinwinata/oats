<% provide(:title, 'Register') %>
<% provide(:description, 'none') %>
<div>
	<h1>Register</h1>
</div>
<div class="register_form">
	<%= form_for(:@company) do |f| %>

	<%= f.label :username %>
    <%= f.text_field :username %>

	<%= f.label :company_name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :address %>
    <%= f.text_field :address %>

    <%= f.label :contact %>
    <%= f.text_field :contact %>

    <%= f.submit "Register", class: "orange_button login_button" %>
    <% end %>
</div>