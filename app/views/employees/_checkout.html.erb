<div id="timer">
	<div id="timer-hour">
		<%= @timer / 3600 %> 
		<% @timer %= 3600 %>
	</div>
	<div id="timer-symbol">
		:
	</div>
	<div id="timer-minute">
		<%= @timer / 60 %> 
		<% @timer %= 60 %>
	</div>
	<div id="timer-symbol">
		:
	</div>
	<div id="timer-second">
		<%= @timer %>
	</div>
</div>
<br/>
<%= form_tag('/employee/checkout', :method => 'post') do %>
  <%= label_tag(:latitude) %>
  <%= text_field_tag(:latitude) %>

  <%= label_tag(:longitude) %>
  <%= text_field_tag(:longitude) %>
  <%= submit_tag("Checkout") %>
<% end %>
<div class="opt-button">
	<input type="button" id="checkout" value="Checkout" onclick="postLocation('POST', '/employee/checkout')">
</div>