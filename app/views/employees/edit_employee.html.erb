<h1>Update profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@employee) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :division %>
      <%= f.text_field :division %>

      <%= f.label :mobile_number %>
      <%= f.text_field :mobile_number %>

      <%= f.label :office_id %>
      <%= f.collection_select :office_id, Company.find(Office.find(employee_current_user.office_id).company_id).offices, :id, :name %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>