<% provide(:title, 'Company Login') %>
<% provide(:description, 'none') %>
<div>
  <h1>Company Login</h1>
</div>
<div class="login_form">
  <%= form_for(:session, url: session_companies_path) do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Sign in", class: "orange_button login_button" %>
  <% end %>

  <p>New user? <%= link_to "Sign up now!", '/company/signup' %></p>
</div>
